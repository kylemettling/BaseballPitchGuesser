<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/gameday/style.css" />
    <title><%= box.away.abbr %> @ <%= box.home.abbr %></title>
  </head>

  <body>
    <!-- <form action="/getGames">
      <input type="submit" value="Submit" />
    </form> -->
    <h2><%= `${box.away.name} vs. ${box.home.name}` %></h2>
    <h3><%= `${box.getVenueDetails()}` %></h3>
    <div class="mainCon">
      <div class="boxCon">
        <span class="boxLegend">
          <span class="blank"></span><span class="">R</span
          ><span class="">H</span><span class="">E</span>
        </span>
        <span class="awayBox">
          <% Object.keys(box.generateAwayBox()).forEach((a, b)=> {%>
          <span class="<%= a %>"> <%= box.generateAwayBox()[a] %> </span>
          <% }) %>
        </span>
        <span class="homeBox">
          <% Object.keys(box.generateHomeBox()).forEach((a, b)=> {%>
          <span class="<%= a %>"> <%= box.generateHomeBox()[a] %> </span>
          <% }) %>
        </span>
        <div class="batZoneCon">
          <div class="batZone">1</div>
          <div class="batZone">2</div>
          <div class="batZone">3</div>
          <div class="batZone">4</div>
          <div class="batZone">5</div>
          <div class="batZone">6</div>
          <div class="batZone">7</div>
          <div class="batZone">8</div>
          <div class="batZone">9</div>
          <div class="batZone">10</div>
          <div class="batZone">11</div>
          <div class="batZone">12</div>
          <div class="batZone">13</div>
        </div>
      </div>
      <div class="atBatDetails">
        <div class="currentPitcher">
          Current Pitcher: <%= box.getCurrentPitcher() %>
        </div>
        <div class="currentHitter">
          Current Batter: <%= box.getCurrentBatter() %>
        </div>
        <div class="currentInning">
          Half info: <%= box.getCurrentInning() %>
        </div>
        <div class="currentInning">Count: <%= box.getCurrentCount() %></div>
        <div class="currentInning">
          Pitch Details: <%= box.getPitcherStats() %>
        </div>
        <div class="currentInning">
          Previous At Bat: <%= box.getPreviousAtBatResult() %>
        </div>
        <div class="currentInning">
          Half info: <%= JSON.stringify(box.getCurrentAtBat()) %>
        </div>
      </div>
    </div>
    <!-- <script src="js/gameday/main.js"></script> -->
  </body>
</html>
